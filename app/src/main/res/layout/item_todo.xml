<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bgitemdoes"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_height="115dp">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titledoes"
            android:layout_marginTop="19dp"
            android:textSize="22sp"
            android:textColor="#243AAA"
            android:text="Study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/descdoes"
            android:textSize="18sp"
            android:textColor="#ADADAD"
            android:layout_marginTop="8dp"
            android:text="Mathematics"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


        <TextView
            android:id="@+id/datedoes"
            android:textSize="17sp"
            android:textColor="#7AD115"
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/datedoes2"
        android:textSize="17sp"
        android:textColor="#D5281B"
        android:layout_marginTop="40dp"
        android:gravity="right"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>